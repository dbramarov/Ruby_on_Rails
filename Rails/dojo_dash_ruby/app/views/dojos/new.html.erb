<h1>New Dojo</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |err| %>
  		<p style="color: red;"><%= err %></p>
  	<% end %>	
<% end %>

<form action="/dojos" method="post">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
   	<p>Branch: <input type="text" name="dojo[branch]"></p>
	<p>Street: <input type="text" name="dojo[street]"></p>
	<p>City: <input type="text" name="dojo[city]"></p>
	<p>State: <input type="text" name="dojo[state]"></p>
   <input type="submit" value="Create New Dojo">
</form>
<a href="/dojos">Home</a>
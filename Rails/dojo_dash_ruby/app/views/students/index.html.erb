<h1><%= @dojo.branch %></h1>
<p><strong>Address: </strong><%= @dojo.street %></p>
<p><strong>City: </strong><%= @dojo.city %></p>
<p><strong>State: </strong><%= @dojo.state %></p>

<table style="border: 1px solid black; text-align: center;">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr style="border: 1px solid black;">
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><a href="/students/<%= student.id %>">Show</a> | <a href="/students/<%= student.id %>/edit">Edit</a> | <a href="/students/<%= student.id %>" data-method="delete">Delete</a></td>
    </tr>
  <% end %>  
  </tbody>
</table>
<p><a href="/students/<%= @dojo.id %>/new">Add Student</a> |
<a href="/dojos">Home</a> </p>

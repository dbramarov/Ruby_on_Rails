<h1>Edit User <%= @user.name %>:</h1>

<p><a href="/users/<%= session[:user_id] %>">Cancel</a>


<% if flash[:errors] %>
  	<% flash[:errors].each do |err| %>
  		<p style="color: red;"><%= err %></p>
  	<% end %>	
<% end %>

<form style="display: inline-block;" action="/users/update" method="post">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
   <input type="hidden" name="_method" value="patch">
    <p>Name: <input type="text" name="Name" value="<%= @user.name %>" required></p>
   	<p>Email: <input type="text" name="Email" value="<%= @user.email %>" required></p>
   <input type="submit" value="Update User">
</form>

<form style="display: inline-block;" action="/users/<%= session[:user_id] %>/delete" method="post">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
   <input type="hidden" name="_method" value="delete">
   <input type="submit" value="Delete User">
</form>